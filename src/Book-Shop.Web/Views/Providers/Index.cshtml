@using Book_Shop.Web.Extensions
@model IEnumerable<Book_Shop.Web.ViewModels.ProviderViewModel>

@{
    ViewData["Title"] = "Providers List";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-info" asp-action="Create" disable-by-claim-name="Provider" disable-by-claim-value="Add">New provider</a>

<table class="table table-hover mt-1">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @this.FormatDoc(item.ProviderKind, item.Document)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam></a>
                    <a class="btn btn-warning" disable-by-claim-name="Provider" disable-by-claim-value="Edit" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam></a>
                    <a class="btn btn-danger" supress-by-claim-name="Provider" supress-by-claim-value="Delete" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam></a>
                </td>
            </tr>
        }
    </tbody>
</table>
