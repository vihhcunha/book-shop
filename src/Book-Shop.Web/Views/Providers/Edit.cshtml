@model Book_Shop.Web.ViewModels.ProviderViewModel;

@{
    ViewData["Title"] = "Edit provider";
}

<div class="text-center p-3">
    <h1>@ViewData["Title"]</h1>
</div>

<hr />

<form asp-action="Edit">

    <vc:Summary></vc:Summary>

    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document"></label>
                <input asp-for="Document" class="form-control" />
                <span asp-validation-for="Document" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-6">

            <div class="form-group">
                <label asp-for="ProviderKind"></label>
                <div>
                    <input type="radio" value="1" asp-for="ProviderKind" checked="@(Model.ProviderKind == 1)" /> Individual Entity
                    <br />
                    <input type="radio" value="2" asp-for="ProviderKind" checked="@(Model.ProviderKind == 2)" /> Legal Entity
                </div>
                <div>
                    &nbsp;
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</form>

<div id="AddressTarget">
    <partial name="_DetailsAddress" />
</div>

<hr />
<h4>Products</h4>
<div>
    <partial name="../Products/_ProductList" model="@Model.Products" />
</div>

<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<script>
    $(document).ready(function(){
        SetModal();
    });
</script>
}
